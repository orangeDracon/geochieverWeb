        <property name="driverClassName" value="com.mysql.jdbc.Driver" />
        <property name="url" value="jdbc:mysql://127.9.85.130:3306/geochiever" />
        <property name="username" value="adminBWvPD6Y" />
        <property name="password" value="b6cYgwm3rTum" />
    </bean>
  
    <bean id="userValidator" class="com.orangedracon.geochiever.sql.user.UserValidator" >      
    </bean>
    
    <bean id="userJDBCTemplate" class="com.orangedracon.geochiever.sql.user.UserJDBCTemplate">
        <property name="dataSource" ref="dataSource" />        
    </bean>
    
    <bean id="userRoleJDBCTemplate" class="com.orangedracon.geochiever.sql.user_roles.UserRoleJDBCTemplate">
        <property name="dataSource" ref="dataSource" />        
    </bean>
    
    <bean id="augrelAchiJDBCTemplate" class="com.orangedracon.geochiever.sql.augrel_achi.AugrelAchiJDBCTemplate">
        <property name="dataSource" ref="dataSource" />        
    </bean>
    
    <bean id="pointAchiJDBCTemplate" class="com.orangedracon.geochiever.sql.point_achi.PointAchiJDBCTemplate">
        <property name="dataSource" ref="dataSource" />        
    </bean>
    
    <bean id="ZoneAchiJDBCTemplate" class="com.orangedracon.geochiever.sql.zone_achi.ZoneAchiJDBCTemplate">
        <property name="dataSource" ref="dataSource" />        
